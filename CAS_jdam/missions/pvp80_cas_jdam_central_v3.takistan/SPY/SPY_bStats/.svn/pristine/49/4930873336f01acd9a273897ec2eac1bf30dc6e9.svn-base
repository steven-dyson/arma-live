/***************************************************************************
Init
****************************************************************************/
private ["_vehicle", "_switched", "_vehicleInfo", "_playerInfo"];

_vehicle = (_this select 0);
_switched = (_this select 1);

_vehicleInfo = (_vehicle getVariable "SPY_VEHICLE_INFO");
_playerInfo = (player getVariable "SPY_PLAYER_INFO");
/***************************************************************************
Init
****************************************************************************/



/***************************************************************************
Reset player vehicle info
****************************************************************************/
waitUntil {sleep 0.1; (alive player)};

_playerInfo set [2, false];
_playerInfo set [3, false];
_playerInfo set [4, objNull];
/***************************************************************************
Reset player vehicle info
****************************************************************************/



/***************************************************************************
Reset Vehicle Crew Info
****************************************************************************/
_vehicleInfo set [1, (crew _vehicle)];
_vehicle setVariable ["SPY_VEHICLE_INFO", _vehicleInfo, true];
/***************************************************************************
Reset Vehicle Crew Info
****************************************************************************/