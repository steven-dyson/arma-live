/***************************************************************************
INIT
****************************************************************************/
private ["_delay", "_waitTime"];

// Set up delay
_delay = 2;
_waitTime = (time + _delay);

// Wait until you want music to start. (Delay if heavy scripting causes pauses in music)
waitUntil {(time > _waitTime)};
/***************************************************************************
END
****************************************************************************/


/***************************************************************************
INTRO PROGRAM
****************************************************************************/
// Play music defined in init.sqf (music fades in from a 0 volume)
0 fadeMusic 0;
playMusic ["Track02_Insertion", 0];
3 fadeMusic 0.4;

// Fade to 50 percent when loading is done
waitUntil {(SPY_LOADING_COMPLETE)};
3 fadeMusic 0.2;

// Turn off music, delay set in init.sqf
sleep 10;
3 fadeMusic 0;
/***************************************************************************
END
****************************************************************************/



