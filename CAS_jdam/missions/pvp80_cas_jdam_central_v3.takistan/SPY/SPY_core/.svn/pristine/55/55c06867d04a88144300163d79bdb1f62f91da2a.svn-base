/***************************************************************************
THREAD
****************************************************************************/
private ["_rank"];

while {true} do {

	waitUntil {sleep 0.1; sideEnemy == side player};
	
	if (((leader player) == player)) then {
	
		_rank = "SERGEANT";
		
	} else {
	
		_rank = "PRIVATE";
	
	};
	
	player setUnitRank _rank;
	
};
