/***************************************************************************
INIT
****************************************************************************/
private ["_player", "_killer", "_pUID", "_pSide", "_kUID", "_kName", "_kSide", "_kScoreVar"];

_player = (_this select 0);
_killer = (_this select 1);

_pUID = (_player getVariable "SPY_id_player" select 0);
_pSide = (_player getVariable "SPY_id_player" select 2);

_kUID = (_killer getVariable "SPY_id_player" select 0);
_kName = (_killer getVariable "SPY_id_player" select 1);
_kSide = (_killer getVariable "SPY_id_player" select 2);
_kScoreVar = (format ["SPY_bStats_%1", _kUID]);
/***************************************************************************
END
****************************************************************************/



/***************************************************************************
END
****************************************************************************/
if ((_pUID == "")) exitWith {

	_null = ["AUTO", _kScoreVar, _kUID] spawn SPY_punish;

};
/***************************************************************************
END
****************************************************************************/



/***************************************************************************
END
****************************************************************************/
if ((_pSide == _kSide)) then {

	_null = [_kName, _kScoreVar, _kUID] spawn SPY_punish;
	

};
/***************************************************************************
END
****************************************************************************/